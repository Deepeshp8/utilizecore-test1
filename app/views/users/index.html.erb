<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%if @users.present?%>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', users_admin_path(user) %></td>
        <td><%= link_to 'Edit', edit_users_admin_path(user) %></td>
        <td><%= link_to 'Destroy', '/users_admin', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% else %>
    <tr><td>No Information found.</td></tr>
    <% end %>
  </tbody>
</table>
<br>
<% if @users.present? %>
  <%= will_paginate @users %>
<% end %>

<br>

<%= link_to 'New User', new_users_admin_path %>

